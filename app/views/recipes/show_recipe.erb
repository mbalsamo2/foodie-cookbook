<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>Foodie Cookbook</title>
  </head>

  <body style="background-color: #E0FFFF;">

    <header>
      <a href="/recipes">Homepage</a>
      <a href="/logout">Log Out</a>
      <h1 style="text-align: center;" id="header"> Foodie Cookbook </h1>
      <h2 style="text-align: center;" id="header"> Your Personal Online Cookbook </h2>
    </header>

    <h3>Chef <%=@current_user.name%>'s Delicious New Recipe: </h3>

      <p>Recipe Name: <%= @recipe.recipe_name%></p>
      <p>Cook Time: <%= @recipe.cook_time%> minute(s)</p>
      <p>Ingredients: <%= @recipe.ingredients%></p>
      <p>Instructions: <%= @recipe.instructions%></p>
      <i><p>This recipe needs some <a href="/recipes/<%=@recipe.id%>/edit">editing.</a> This recipe needs to be <a href="/recipes/<%=@recipe.id%>/delete">deleted.</a></p></i>

    <br><br>

    <p>What would you like to do next?</p>
    <p>I feel like cookin'! <a class="button" href="/recipes/new">Create a New Recipe</a></p>
    <p>View your personal recipe <a href="/users/<%=@current_user.slug%>">cookbook</a>.</p>

  </body>
</html>
